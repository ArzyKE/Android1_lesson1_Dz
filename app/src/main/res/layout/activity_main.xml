<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Game"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/im_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_game"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/first_layut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/im_image"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="checkChoose"
            android:text="@string/image_1" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkChoose"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/image_1" />

        <Button
            android:id="@+id/btn_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="checkChoose"
            android:text="@string/image_1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sekond_layut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_layut"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cadillac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/deffault"
            android:text="Cadillak" />

        <Button
            android:id="@+id/btn_mustang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/deffault"
            android:text="Mustang" />

        <Button
            android:id="@+id/btn_peugeot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/deffault"
            android:text="Peugauyt" />

    </LinearLayout>

</RelativeLayout>